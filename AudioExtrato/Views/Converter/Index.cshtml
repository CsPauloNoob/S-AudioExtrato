@{
    ViewBag.Title = "Upload de Vídeo";
}

<style>
    
    body {
        background-color: #282c34;
    }
    
    h2 {
        color: #61dafb;
        text-align: center;
        margin-top: 50px;
        font-size: 3em;
        font-family: "Segoe UI", "Helvetica Neue", sans-serif;
    }
    
    
    form {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
    
    
    label[for="file"] {
        display: block;
        margin-bottom: 10px;
        color: #333;
        font-family: "Segoe UI", "Helvetica Neue", sans-serif;
        font-size: 1.2em;
    }
    
    
    input[type="submit"] {
        display: inline-block;
        background-color: #61dafb;
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin-top: 20px;
        font-family: "Segoe UI", "Helvetica Neue", sans-serif;
        font-size: 1.2em;
        border-radius: 5px;
        cursor: pointer;
    }
    
    
    input[type="file"] {
        display: block;
        margin: 0 auto;
    }
</style>


<h2>Selecione seu vídeo</h2>

<form method="post" enctype="multipart/form-data">
    <label for="file">Escolha o arquivo de vídeo:</label>
    <input type="file" name="file" id="file" />
    <br />
    <input type="submit" value="Enviar" />
</form>
